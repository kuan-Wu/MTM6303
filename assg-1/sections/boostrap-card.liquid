<div class="card" style="width: 18rem;">
  <img class="card-img-top" src="{{ section.settings.card_image | image_url: width: 500 }}" alt="{{section.settings.card_image.alt}}">
  <div class="card-body">
    <h5 class="card-title"> {{ section.settings.card_title}}</h5>
    <p class="card-text">{{ section.settings.card_text_body}}</p>
    <a href="{{ section.settings.button_link}}" class="btn btn-primary">{{ section.settings.button_title}}</a>
  </div>
</div>
<style>
  .card .btn {
    background-color : {{ section.settings.btn-color}}
  }
</style>  
{% schema %}
{
    "name": "Bootstrap Card",
    "tag": "section",
    "settings": [
        {
          "type": "image_picker",
          "id": "card_image",
          "label": "Card Image"
        },

        {
            "type": "color",
            "id": "btn-color",
            "label": "Button Color",
            "default": "#3b4d28"
        },

		{
			"type": "text",
         	 "id": "card_title",
          	"label": "Card Title",
         	 "default": "Card Title"
        },
		
		  {
            "id": "card_text_body",
            "type": "richtext",
            "label": "Card Text",
            "default": "<p>Some quick example text to build on the card title and make up the bulk of the card's content.</p>"
        },


        {
			"type": "text",
         	 "id": "button_title",
          	"label": "Button Title",
         	 "default": "Go somewhere"
        },
		
		

		{
          "type": "url",
          "id": "button_link",
          "label": "Button link"
        }
    ],
    "presets": [{
        "name": "Bootstrap Card",
        "category": "Custom"
    }]
}
{% endschema %}

